<!DOCTYPE html>
<html>
@model webControlAsistencia.Models.ClassLogin

@{
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/loginEstilo.css" />
</head>
<body>
@* <h1>Index</h1>

<h4>ClassLogin</h4> *@
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="login-container">
            <div class="icon-user">👤</div>
            <form asp-action="Index">

            
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <div class="form-group">
                     <label asp-for="Identificacion" class="control-label"></label>
                     <input asp-for="Identificacion" class="form-control" type="text" id="identificacion" name="identificacion" />
                     <span asp-validation-for="Identificacion" class="text-danger"></span>
                 </div>
                 <div class="form-group">
                     <label asp-for="Contrasenna" class="control-label"></label>
                     <input asp-for="Contrasenna" class="form-control" type="password" id="contrasena" name="contrasenna" />
                     <span asp-validation-for="Contrasenna" class="text-danger"></span>
                 </div>
                 <div class="form-group">
                     <input type="submit" value="Ingresar" class="btn-primar" />
                 </div>
            </form>
        </div>
    </div>
</div>

@* <div>
    <a asp-action="Index">Back to List</a>
</div> *@
</body>
</html>

